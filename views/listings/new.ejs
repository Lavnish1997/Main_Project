<% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-7 offset-2">
            <!-- <br><br> -->
            <h3 class="new-h3 mt-3 text-center">Create a New Listing</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input name="listing[title]" placeholder="Enter title" placeholder="Enter Title" type="text" class="form-control" required />
                    <div class="valid-feedback"><b>Title looks good!</b></div>
                    <div class="invalid-feedback">Title should be add!</div>
                </div>
                <br />
                <br>
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea name="listing[description]" placeholder="Please,describe about this place" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please enter short description!</div>
                </div>
                <br /><br />
                <div class="mb-3">
                    <label for="image" class="form-label">Image URL:</label>
                    <input name="listing[image]" placeholder="Enter Image URL/Link" class="form-control" />
                </div>
                <br /><br/>
                <div class="row">
                    <div class="mb-3 col-md-4 ">
                        <label for="price" class="form-label">Price:</label>
                        <input name="listing[price]" placeholder="Enter Price" class="form-control" required />
                        <div class="invalid-feedback">Price should be valid!</div>
                    </div>
                    <br /><br />
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country:</label>
                        <!-- <select name="country" id="country" class="form-control" required>
                            
                        
                            <option value="choose" selected>Choose your Country</option>
                            <option value="india">India</option>
                            <option value="dubai">Dubai</option>
                            <option value="United state">United State</option>
                            <option value="austalia">Austalia</option>
                          </select> -->
                        <input name="listing[country]" placeholder="Enter Country" type="text" class="form-control" required/>
                        <div class="invalid-feedback">Country name should be add!</div>
                    </div>
                </div>
                <br /><br />
                <div class="mb-3">
                    <label for="location" class="form-label">Location:</label>
                    <input name="listing[location]" placeholder="Enter Location" type="text" class="form-control" required />
                    <div class="invalid-feedback">Location should be valid</div>
                </div>
                <button class="btn btn-dark add-btn mt-3">Add</button>
                <br><br>
            </form>
        </div>
    </div>